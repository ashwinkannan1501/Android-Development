<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Intent_SecondActivity">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="387dp"
        android:layout_height="133dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="67dp"
        android:gravity="center"
        android:text="Intent Second Activity"
        android:textColor="#EA3F0A"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/getting_username_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/getting_username_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="Username : "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#0AD6F5"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/getting_email_address_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/getting_email_address_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="44dp"
        android:gravity="center"
        android:text="Email Address : "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#0AD6F5"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/getting_phone_number_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getting_username_text_view" />

    <TextView
        android:id="@+id/getting_phone_number_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="45dp"
        android:gravity="center"
        android:text="Phone Number : "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#0AD6F5"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/getting_password_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getting_email_address_text_view" />

    <TextView
        android:id="@+id/getting_password_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="148dp"
        android:gravity="center"
        android:text="Password : "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#0AD6F5"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getting_phone_number_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>