<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTintMode="multiply"
    tools:context=".Program_3_EditText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/name"
            android:layout_width="348dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/black"
            android:backgroundTint="#090909"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Name : "
            android:inputType="textPersonName"
            android:paddingTop="0dp"
            android:textAlignment="gravity"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FEFEFE"
            android:textColorHint="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal"
            android:verticalScrollbarPosition="defaultPosition" />

        <EditText
            android:id="@+id/age"
            android:layout_width="348dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="0dp"
            android:background="@color/black"
            android:ems="10"
            android:hint="Age : "
            android:inputType="number"
            android:textAlignment="gravity"
            android:textColor="#FFFCFC"
            android:textColorHint="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="348dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="0dp"
            android:background="@color/black"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Phone Number : "
            android:inputType="phone"
            android:textAlignment="gravity"
            android:textColor="#F9F5F5"
            android:textColorHint="#FFFFFF"
            android:textStyle="bold"
            android:typeface="sans" />

        <EditText
            android:id="@+id/email_address"
            android:layout_width="348dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            android:background="@color/black"
            android:ems="10"
            android:foregroundGravity="center"
            android:hint="Email address : "
            android:inputType="textEmailAddress"
            android:numeric="signed|integer|decimal"
            android:paddingTop="0dp"
            android:textAlignment="gravity"
            android:textColor="#F8F8F8"
            android:textColorHint="#F6F3F3"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/date"
            android:layout_width="348dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@color/black"
            android:ems="10"
            android:hint="Date : "
            android:inputType="date"
            android:textAlignment="gravity"
            android:textColor="#FBFBFB"
            android:textColorHint="#FEFEFE"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/time"
            android:layout_width="348dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@color/black"
            android:ems="10"
            android:hint="Time : "
            android:inputType="time"
            android:textAlignment="gravity"
            android:textColor="#FBFBFB"
            android:textColorHint="#FFFEFE"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password"
            android:layout_width="348dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:allowUndo="true"
            android:background="@color/black"
            android:ems="10"
            android:hint="password : "
            android:inputType="textPassword"
            android:password="false"
            android:textAlignment="gravity"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/postal_address"
            android:layout_width="348dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@color/black"
            android:ems="10"
            android:hint="Address : "
            android:inputType="textPostalAddress"
            android:textAlignment="gravity"
            android:textColor="#F9F7F7"
            android:textColorHint="#F4F3F3"
            android:textStyle="bold" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Submit"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>