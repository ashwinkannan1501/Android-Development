<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Program_11_AlertDialog">

    <TextView
        android:id="@+id/alert_dialog_title_text_view"
        android:layout_width="330dp"
        android:layout_height="137dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="48dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Alert Dialog Box"
        android:textColor="#6313D3"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exit_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Press the back button to exit the application"
        android:textAllCaps="false"
        android:textColor="#E91E63"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alert_dialog_title_text_view" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="128dp"
        android:layout_height="73dp"
        android:layout_marginTop="72dp"
        android:background="#EA1313"
        android:backgroundTint="#EF1212"
        android:backgroundTintMode="multiply"
        android:forceHasOverlappingRendering="true"
        android:gravity="center|center_horizontal|center_vertical"
        android:hapticFeedbackEnabled="true"
        android:shadowColor="#000000"
        android:text="Exit "
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFCFC"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exit_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>