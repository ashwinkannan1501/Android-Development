<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Program_15_Spinner">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="84dp"
        android:gravity="center"
        android:text="Spinner Component"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="48sp"
        android:textStyle="italic"
        app:autoSizeTextType="uniform"
        app:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toTopOf="@+id/date_text_view"
        app:layout_constraintEnd_toEndOf="@+id/date_spinner"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textAllCaps="true" />

    <TextView
        android:id="@+id/date_text_view"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="67dp"
        android:background="#DE8E8E"
        android:gravity="center"
        android:text="Date"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#3f0c75"
        android:textSize="24sp"
        android:textStyle="italic"
        app:fontFamily="serif"
        app:layout_constraintBottom_toTopOf="@+id/month_text_view"
        app:layout_constraintEnd_toStartOf="@+id/date_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:textAllCaps="true" />

    <Spinner
        android:id="@+id/date_spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/date_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/date_text_view"
        app:layout_constraintTop_toTopOf="@+id/date_text_view" />

    <TextView
        android:id="@+id/month_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="56dp"
        android:background="#DE8E8E"
        android:gravity="center"
        android:text="Month"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#3f0c75"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/year_text_view"
        app:layout_constraintEnd_toStartOf="@+id/month_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_text_view"
        app:textAllCaps="true" />

    <Spinner
        android:id="@+id/month_spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/month_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/month_text_view"
        app:layout_constraintTop_toTopOf="@+id/month_text_view" />

    <TextView
        android:id="@+id/year_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="54dp"
        android:background="#DE8E8E"
        android:gravity="center"
        android:text="Year"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#3f0c75"
        android:textSize="24sp"
        android:textStyle="italic"
        app:fontFamily="sans-serif"
        app:layout_constraintBottom_toTopOf="@+id/SubmitButton"
        app:layout_constraintEnd_toStartOf="@+id/year_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/month_text_view"
        app:textAllCaps="true" />

    <Spinner
        android:id="@+id/year_spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/year_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/year_text_view"
        app:layout_constraintTop_toTopOf="@+id/year_text_view" />

    <Button
        android:id="@+id/SubmitButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="141dp"
        android:layout_height="0dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="118dp"
        android:background="@color/design_default_color_primary_dark"
        android:elevation="@dimen/cardview_compat_inset_shadow"
        android:text="Button"
        app:backgroundTint="@color/design_default_color_primary_variant"
        app:backgroundTintMode="multiply"
        app:cornerRadius="@android:dimen/thumbnail_width"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/year_text_view"
        app:layout_constraintTop_toBottomOf="@+id/year_text_view"
        app:shapeAppearance="@style/Animation.Design.BottomSheetDialog"
        app:shapeAppearanceOverlay="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
        app:strokeColor="@color/purple_700"
        app:strokeWidth="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>