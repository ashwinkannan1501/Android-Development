<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Program_23_Support_Multiple_Languages">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:layout_marginBottom="81dp"
        android:gravity="center"
        android:text="@string/multiple_languages"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#1010F9"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/toast_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textAllCaps="true" />

    <Button
        android:id="@+id/toast_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF0101"
        android:elevation="12dp"
        android:insetLeft="12dp"
        android:insetTop="12dp"
        android:insetRight="12dp"
        android:insetBottom="12dp"
        android:text="@string/toast_message_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="italic"
        app:backgroundTint="#DD2C00"
        app:backgroundTintMode="multiply"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_date"
        app:iconPadding="10dp"
        app:iconTint="#6D0DF2"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="12dp" />
</androidx.constraintlayout.widget.ConstraintLayout>